<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/table_detail_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fellows"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:text="6"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/fellows_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/fellows"
        android:layout_alignTop="@id/fellows"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/fellows"
        android:gravity="center_vertical"
        android:text="comensales"/>


    <TextView
        android:id="@+id/plates"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/fellows"
        android:layout_below="@id/fellows"
        android:gravity="center_vertical"
        android:text="5"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/plates_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/plates"
        android:layout_alignLeft="@id/fellows_title"
        android:layout_alignTop="@id/plates"
        android:layout_toRightOf="@id/plates"
        android:gravity="center_vertical"
        android:text="platos"/>

    <TextView
        android:id="@+id/table_number"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/table_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#fff2f2f2"
        android:gravity="center"
        android:text="1"
        android:textColor="@android:color/primary_text_light"
        android:textSize="30sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/table_number"
        android:layout_alignLeft="@+id/table_number"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/table_number"
        android:layout_alignTop="@+id/table_number"
        android:alpha="0.05"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_table"/>


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_below="@id/table_number"
                 android:layout_marginTop="@dimen/activity_vertical_margin">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/table_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <TextView
        android:id="@+id/table_notes"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#fff2f2f2"
        android:textColor="@android:color/primary_text_light"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/table_notes_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/table_notes"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#fff2f2f2"
        android:textColor="@android:color/primary_text_light"
        android:text="Notas:"/>

</RelativeLayout>